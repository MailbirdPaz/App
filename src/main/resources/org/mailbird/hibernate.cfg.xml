<?xml version="1.0" encoding="utf-8"?>
<hibernate-configuration
        xmlns="http://www.hibernate.org/xsd/orm/cfg"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.hibernate.org/xsd/orm/cfg
                            https://hibernate.org/xsd/orm/cfg/hibernate-configuration-6.0.xsd">

    <session-factory>

        <!-- Database connection -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">postgres</property>

        <!--    do not use auto migration, use sql script in the project root    -->
        <!-- Auto-create/update tables -->
        <!--        <property name="hibernate.hbm2ddl.auto">update</property>-->

        <!-- Entities -->
        <mapping class="org.mailbird.Core.domain.entity.UserEntity"/>
        <mapping class="org.mailbird.Core.domain.entity.FolderEntity"/>
        <mapping class="org.mailbird.Core.domain.entity.MailEntity"/>

    </session-factory>
</hibernate-configuration>
